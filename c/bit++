#include<stdio.h>
#include<conio.h>

int main(){
    int n,x=0;
    char s[4];
    scanf("%d",&n);

    gets(s);

    for(int i=0;i<n;i++){
        gets(s);
        
        if (s[1]=='+')
        {
            x+=1;
        }
        else{
            x-=1;
        }
    }
    printf("%d",x);
}



    

