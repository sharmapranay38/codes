#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main(){
    int a,count=0;
    scanf("%d",&a);
    for (int i = 0; i < a; ++i)
    {
        int one,two,three;
        scanf("%d %d %d",&one,&two,&three);
        

        if ((one==1 && two==1 && three==1) || (one==1 && two==1) || (two==1 && three==1) || (one==1 && three==1) )
        {
            count+=1;
        }

    }
    printf("%d",count);
}
